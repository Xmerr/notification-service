{
	"name": "notification-service",
	"version": "2.0.0",
	"description": "RabbitMQ consumer that routes messages from the notifications exchange to the discord exchange for delivery",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"start": "bun run src/index.ts",
		"dev": "bun run --watch src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target bun",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"lint": "bunx @biomejs/biome check .",
		"lint:fix": "bunx @biomejs/biome check --write .",
		"format": "bunx @biomejs/biome format --write .",
		"typecheck": "bunx tsc --noEmit"
	},
	"dependencies": {
		"amqplib": "^0.10.4",
		"pino": "^9.6.0",
		"pino-loki": "^2.3.1",
		"pino-pretty": "^13.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/amqplib": "^0.10.5",
		"@types/bun": "^1.1.14",
		"typescript": "^5.7.2"
	}
}
